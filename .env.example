# Application Configuration
APP_NAME=Crater
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost
APP_LOG_LEVEL=debug

# Docker Configuration
DOCKER_USER=crater-user
DOCKER_UID=1000
DOCKER_IMAGE=crater-php
HTTP_PORT=8080

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=
MYSQL_ROOT_PASSWORD=
DB_IMAGE=mariadb:10.6
DB_VOLUME=db_data
DB_SEED=false

# Database Healthcheck
HEALTHCHECK_INTERVAL=5s
HEALTHCHECK_TIMEOUT=5s
HEALTHCHECK_RETRIES=10
HEALTHCHECK_START_PERIOD=10s

# Infrastructure Configuration
VOLUME_DRIVER=local
NETWORK_DRIVER=bridge
CADDY_IMAGE=caddy:2-alpine

# Session and Cache
SESSION_DRIVER=file
QUEUE_CONNECTION=sync
CACHE_DRIVER=file
SESSION_LIFETIME=1440
SESSION_DOMAIN=

# Mail Configuration
MAIL_MAILER=log
MAIL_HOST=
MAIL_PORT=
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME=

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# File Storage
FILESYSTEM_DISK=local

# Security
SANCTUM_STATEFUL_DOMAINS=
TRUSTED_PROXIES=*
CRON_JOB_AUTH_TOKEN=

# Other Settings
LOG_CHANNEL=stack
BROADCAST_DRIVER=log
MEMCACHED_HOST=127.0.0.1
